{
  "extends": "standard",
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    // Add any project-specific overrides here
    "semi": ["error", "always"], // Example: enforce semicolons if 'standard' doesn't
    "comma-dangle": ["error", "always-multiline"] // Example
  }
}